<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/chosseback"
    tools:context="app.webview.vrnmocawan.Choose">




    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="National Museum Virtual Tour"
        android:textColor="#000"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="جولة افتراضية المتحف الوطني"
        android:textColor="#000"
        android:textSize="30dp" />
            <Button
                android:id="@+id/eng"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_margin="35dp"

                android:layout_gravity="center"
                android:background="@drawable/englishbutton"

                android:textColorHint="#fff"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <Button
    android:id="@+id/arb"
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:layout_centerInParent="true"
    android:layout_margin="10dp"
                android:layout_gravity="center"
    android:layout_marginBottom="10dp"
    android:background="@drawable/arabic"

    android:padding="5dp"
    android:textColorHint="#fff"
    android:textSize="20sp"
    android:textStyle="bold|italic" />


    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:src="@drawable/icons"/>
</LinearLayout>